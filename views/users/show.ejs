<a href='/users/logout'><h6 id="logout">log out</h6></a>
<h5 id="welcome-user">watup, <a href='/users/<%=currentUser.username%>/posts'><span class='current-user'> <%= currentUser.username %></span></a></h5>

<!-- Current topic title and description -->
<div id='show-topic'>
	<h1><%=currentUser.username%>'s articles</h1>
</div>

<% posts.forEach(function(post, i){%>
	<div class='post'>
		<div class='attribution'>
			<h4 class='post-title'><%=post.title%></h4>
			<h5 class='post-author'><%=post.author%></h5>
		</div>
		<div class='vote'>
			<form action="/<%=post._id%>/edit" method="get">
				<input class='up-vote' type="submit" value="edit">	
			</form>
			<form action="/<%=post._id%>/delete?_method=DELETE" method="post">
				<input class='down-vote' type="submit" value="delete">	
			</form>
		</div>
		<p class='post-content'>
			<%=post.content%>
		</p>
	</div>
<%})%>